<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to "Destroy", destroy_book_path(book.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model: @list do |f|%>
<p>Title</p>
  <%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>