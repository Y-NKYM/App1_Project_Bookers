<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f|%>
  <div class="field">
    <% if @book.errors.include?(:title) %>
      <div class="error_column">
        <%= f.label :title, "Title", class: "label" %>
      </div>
      <div class="error_column">
        <%= f.text_field :title %>
      </div>
    <% else %>
      <%= f.label :title, "Title", class: "label" %>
      <%= f.text_field :title %>
    <% end %>
  </div>
  <div class="field">
   <% if @book.errors.include?(:body) %>
      <div class="error_column">
        <%= f.label :body, "Body", class: "label" %>
      </div>
      <div class="error_column">
        <%= f.text_area :body %>
      </div>
    <% else %>
      <%= f.label :body, "Body", class: "label" %>
      <%= f.text_area :body %>
    <% end %>
  </div>
  <div class="field">
    <%= f.submit "Update Book", class: "submit" %>
  </div>
<% end %>


<%= link_to "Show", book_path(@book.id), class: "link" %>
<span> | </span>
<%= link_to "Back", '/books', class: "link" %>
