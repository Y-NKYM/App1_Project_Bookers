<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f|%>
  <div class="field">
    <%= f.label :title, "Title", class: "label" %>
    <%= f.text_field :title%>
  </div>
  <div class="field">
    <%= f.label :body, "Body", class: "label" %>
    <%= f.text_area :body%>
  </div>
  <div class="field">
    <%= f.submit "Update Book", class: "submit" %>
  </div>
<% end %>


<%= link_to "Show", book_path(@book.id), class: "link" %>
<span> | </span>
<%= link_to "Back", '/books', class: "link" %>
